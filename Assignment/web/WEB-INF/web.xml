<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.javaweb.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.javaweb.controller.loginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddEmployee</servlet-name>
        <servlet-class>com.javaweb.controller.AddEmployee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditnvServlet</servlet-name>
        <servlet-class>com.javaweb.controller.EditnvServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DiemDanhServlet</servlet-name>
        <servlet-class>com.javaweb.controller.DiemDanhServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditluongServlet</servlet-name>
        <servlet-class>com.javaweb.controller.EditluongServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditchucvuServlet</servlet-name>
        <servlet-class>com.javaweb.controller.EditchucvuServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddChucVuServlet</servlet-name>
        <servlet-class>com.javaweb.controller.AddChucVuServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddEmployee</servlet-name>
        <url-pattern>/AddEmployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditnvServlet</servlet-name>
        <url-pattern>/EditnvServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DiemDanhServlet</servlet-name>
        <url-pattern>/DiemDanhServlet</url-pattern>
    </servlet-mapping>
    <context-param>
        <description>Location to store uploaded file</description>
        <param-name>file-upload</param-name>
        <param-value>
            file-upload/
        </param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>EditluongServlet</servlet-name>
        <url-pattern>/EditluongServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditchucvuServlet</servlet-name>
        <url-pattern>/EditchucvuServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddChucVuServlet</servlet-name>
        <url-pattern>/AddChucVuServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
